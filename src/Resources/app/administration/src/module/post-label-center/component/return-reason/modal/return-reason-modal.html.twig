{% block plc_return_reason__modal %}
    <sw-modal
            class="plc-return-reasons-modal"
            :title="modalTitle"
            variant="small"
            @modal-close="$emit('modal-close')"
    >
        {% block plc_return_reason__modal_body %}
            <mt-loader v-if="isLoading && feature.isActive('v6.6.0.0')"/>
            <sw-loader v-if="isLoading && !feature.isActive('v6.6.0.0')"/>
            <template v-else>
                <sw-text-field
                        v-model:value="name"
                        class="plc-return-reasons-modal_name"
                        size="small"
                        name="return-reason-name"
                        :label="$tc('plc.returnReasons.label.name')"
                        :placeholder="$tc('plc.returnReasons.placeholder.name')"
                />

                <sw-text-field
                        v-model:value="technicalName"
                        class="plc-return-reasons-modal_technicalName"
                        name="return-reason-technicalName"
                        :label="$tc('plc.returnReasons.label.technicalName')"
                        :placeholder="$tc('plc.returnReasons.placeholder.technicalName')"
                        size="small"
                />
            </template>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block plc_return_reason__modal_footer %}
            <template #modal-footer>
                {% block plc_return_reason__modal_footer_close_button %}
                    <sw-button
                            size="small"
                            @click="$emit('modal-close')"
                    >
                        {{ $tc('global.sw-modal.labelClose') }}
                    </sw-button>
                {% endblock %}

                {% block plc_return_reason__modal_footer_save_button %}
                    <sw-button
                            variant="primary"
                            size="small"
                            :disabled="isLoading"
                            @click="saveReason"
                    >
                        {{ $tc('plc.modal.save') }}
                    </sw-button>
                {% endblock %}
            </template>
        {% endblock %}
    </sw-modal>
{% endblock %}
